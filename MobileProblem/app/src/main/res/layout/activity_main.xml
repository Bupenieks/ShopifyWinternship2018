<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.benupenieks.mobileproblem.MainActivity">

    <TextView
        android:id="@+id/stockDataLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="16dp"
        app:layout_constraintLeft_toLeftOf="parent" />

    <EditText
        android:id="@+id/editTextItemSold"
        android:layout_width="352dp"
        android:layout_height="42dp"
        android:ems="10"
        android:inputType="textLongMessage"
        android:hint="Item Sold"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toTopOf="@+id/orLabel"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.571"
        tools:layout_editor_absoluteY="346dp"
        tools:layout_editor_absoluteX="15dp" />

    <Button
        android:id="@+id/searchButton"
        android:layout_width="375dp"
        android:layout_height="43dp"
        android:text="Search"
        tools:layout_editor_absoluteX="5dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp" />

    <TextView
        android:id="@+id/orLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="OR"
        android:layout_marginBottom="-1dp"
        app:layout_constraintBottom_toTopOf="@+id/editTextLastName"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent" />

    <EditText
        android:id="@+id/editTextLastName"
        android:layout_width="165dp"
        android:layout_height="41dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:hint="Last Name"
        android:layout_marginRight="16dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginBottom="7dp"
        app:layout_constraintBottom_toTopOf="@+id/searchButton" />

    <EditText
        android:id="@+id/editTextFirstName"
        android:layout_width="165dp"
        android:layout_height="41dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:hint="First Name"
        android:layout_marginLeft="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/editTextLastName"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="7dp"
        app:layout_constraintBottom_toTopOf="@+id/searchButton"
        app:layout_constraintHorizontal_bias="0.285" />

    <TextView
        android:id="@+id/searchQueryLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Search Queries"
        android:layout_marginLeft="23dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toTopOf="@+id/editTextItemSold" />

    <TextView
        android:id="@+id/customerDataLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:layout_marginLeft="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="19dp"
        app:layout_constraintTop_toBottomOf="@+id/stockDataLabel" />

</android.support.constraint.ConstraintLayout>
